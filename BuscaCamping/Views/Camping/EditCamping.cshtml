@model BuscaCamping.DataAccess.ViewModels.CampingViewModel

@{
    ViewBag.Title = "EditCamping";
}

<h2>EditCamping</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Camping</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.camping.IdCamping, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.camping.IdCamping, new { @readonly = true, @class = "form-control" })
                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.camping.NombreCamping, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.camping.NombreCamping, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.camping.NombreCamping, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.camping.CantParcelas, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.camping.CantParcelas, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.camping.CantParcelas, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.camping.Calle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.camping.Calle, new { @readonly = true, @class = "form-control" })
                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.camping.NumeroCalle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.camping.NumeroCalle, new { @readonly = true, @class = "form-control" })
                
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.camping.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.camping.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.camping.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.camping.TelFijo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.camping.TelFijo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.camping.TelFijo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.camping.Celular, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.camping.Celular, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.camping.Celular, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.camping.IdProvincia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               @Html.TextBoxFor(model => model.camping.NombreProvincia, new { @readonly = true, @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.camping.IdDepartamento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.camping.NombreDepartamento, new { @readonly = true, @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.camping.IdLocalidad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.camping.NombreLocalidad, new { @readonly = true, @class = "form-control" })


            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar Cambios" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div class="container table-responsive">
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <tr class="bg-primary">

                    <th>
                        Servicio
                    </th>
                    <th>
                        Precio
                    </th>
                    <th colspan="2">Acciones</th>

                </tr>

                @foreach (var item in Model.ListaServicioPorCamping)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescripcionServ)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Precio)
                        </td>
                        <td> @Html.ActionLink("Modificar", "EditServPorCamp", "Servicios",  new { idServicioPorCamping = item.IdServicioPorCamping },null) </td>                        
                        <td>@Html.ActionLink("Eliminar", "DeleteServicioPorCamping", "Servicios", new { id = item.IdServicioPorCamping }, new { onclick = "return confirm('Esta seguro de eliminar Servicio?');" })</td>

                    </tr>
                }

            </table>
        </div>


    </div>
</div>



<div>
    @Html.ActionLink("Volver", "IndexCamping")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
