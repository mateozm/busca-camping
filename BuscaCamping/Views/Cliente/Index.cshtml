@model IEnumerable<BuscaCamping.DataAccess.Modelo.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Clientes</h2>

<p>
    @Html.ActionLink("Agregar un cliente", "Create")
</p>
<div class="container table-responsive">
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <tr class="bg-primary">
                    <th>
                        @Html.DisplayNameFor(model => model.CodCliente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Dni)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Apellido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaNac)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nacionalidad)
                    </th>
              
                    <th>
                        @Html.DisplayNameFor(model => model.IdLocalidad)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TelFijo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Celular)
                    </th>
                    <th colspan="3">Acciones</th>

                </tr>


                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CodCliente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dni)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apellido)
                        </td>
                        <td>
                            @item.FechaNac.ToShortDateString()
                        </td>
                        <td>
                            @item.ObtenerNacionalidad()
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreLocalidad)
                        </td>

                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TelFijo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Celular)
                        </td>



                        <td> @Html.ActionLink("Modificar", "Edit", new { idCliente = item.CodCliente }) </td>
                        <td>@Html.ActionLink("Consultar", "Details", new { id = item.CodCliente })</td>
                        <td>@Html.ActionLink("Eliminar", "Delete", new { id = item.CodCliente }, new { onclick = "return confirm('Esta seguro de eliminar Cliente?');" })</td>

                    </tr>
                }

            </table>
        </div>


    </div>
</div>